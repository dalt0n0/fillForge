{
  "name": "fillforge",
  "description": "Desktop PDF form editor for creating, filling, and signing documents.",
  "private": true,
  "version": "0.1.1",
  "author": "FillForge",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && node scripts/launch-electron.cjs\"",
    "build": "vite build",
    "start": "node scripts/launch-electron.cjs",
    "lint": "eslint .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@signpdf/placeholder-pdf-lib": "^3.3.0",
    "@signpdf/signer-p12": "^3.3.0",
    "@signpdf/signpdf": "^3.3.0",
    "node-forge": "^1.3.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.10.38",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^26.6.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.fillforge.app",
    "productName": "FillForge",
    "icon": "favicon.ico",
    "files": [
      "dist/**",
      "electron/**",
      "favicon.ico",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "favicon.ico",
      "target": "nsis",
      "artifactName": "FillForge-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
